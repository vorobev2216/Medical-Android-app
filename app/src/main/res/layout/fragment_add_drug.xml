<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddDrugFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавьте препарат"
        android:fontFamily="@font/metropolissemibold"
        android:textColor="@color/main_blue"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginHorizontal="20dp"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Название препарата"
        app:boxStrokeColor="@color/main_blue">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/main_blue"

            />


    </com.google.android.material.textfield.TextInputLayout>
    <android.widget.Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/main_blue"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:text="Добвавить"
        android:fontFamily="@font/metropolissemibold"
        android:textStyle="bold"
        android:textColor="@color/white"
        />


    
</LinearLayout>