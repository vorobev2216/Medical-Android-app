<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    android:id="@+id/drugcard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="14dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolissemibold"
        android:textSize="18dp"
        android:text="Название"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolissemibold"
        android:textSize="12dp"
        android:text="Desc"
        />

    <ImageButton
        android:id="@+id/radioButton"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginStart="251dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="14dp"

        android:src="@drawable/unchecked_24"/>

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_marginTop="57dp"
        android:layout_marginStart="18dp"
        android:layout_width="25dp"
        android:layout_height="23dp"

        app:srcCompat="@drawable/clock_24" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="29dp"
        android:layout_height="25sp"
        android:layout_marginStart="251dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="27dp"
        app:srcCompat="@drawable/baseline_add_alert_24" />

    <TextView
        android:id="@+id/duetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="59dp"
        android:fontFamily="@font/metropolissemibold"
        android:layout_marginStart="45dp"
        android:text="TextView" />

</androidx.cardview.widget.CardView>